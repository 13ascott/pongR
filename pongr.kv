<MSLabel>:
  font_size: '80sp'
  bold: True
<MSButton>: 
  font_size: '42sp'
  bold: True
  background_normal: ''  
  background_color: .12, .685, .9, 1
  canvas.after:
    Color:
      rgba:1,1,1,1
    Line:
      width: 4
      rectangle: self.x, self.y, self.width, self.height
<BasicBkg>:
  Image:
    source: 'images/wood-bg-w-logo.png'
  MSButton:
    background_color: .42, .522, .58, 1
    size_hint: 0.08,0.69
    pos_hint: {'center_x':0.06, 'center_y':0.3825}
    on_release: root.gotomain() 
  Label:
    text: 'Return to Main'
    font_size: '42sp'
    bold: True
    pos_hint: {'center_x':0.06, 'center_y':0.3825}
    canvas.before:
      PushMatrix
      Rotate:
        angle: 90
        origin: self.center
    canvas.after:
      PopMatrix
